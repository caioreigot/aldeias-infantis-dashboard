<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Top Bar View Group -->
    <RelativeLayout
        android:id="@+id/info_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/blue_background"/>

        <TextView
            android:id="@+id/info_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            tools:text="INFORMAÇÕES: CASA"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/info_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/information_item_count_bg"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            tools:text="4 ITENS"
            android:textSize="22sp"
            android:textColor="@color/primaryBlue"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/info_group_name"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info_top_bar"
        android:background="@color/white"
        tools:listitem="@layout/information_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</RelativeLayout>